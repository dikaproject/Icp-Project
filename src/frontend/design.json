{
    "brandIdentity": {
      "name": "Bills CO",
      "theme": "dark-premium-fintech",
      "personality": "professional, modern, high-tech"
    },
    
    "colorSystem": {
      "primary": {
        "green": "#13F287",
        "greenHover": "#0FD475",
        "greenPressed": "#0CB863"
      },
      "backgrounds": {
        "pageBackground": "#010212",
        "cardBackground": "#1A1B23",
        "cardBackgroundHover": "#21222A",
        "modalBackground": "#0D0E16"
      },
      "gradients": {
        "primaryAccent": "linear-gradient(135deg, #13F287 0%, #5CA0DE 100%)",
        "heroBackground": "radial-gradient(ellipse at center, rgba(19, 242, 135, 0.1) 0%, rgba(1, 2, 18, 1) 70%)",
        "cardBorder": "linear-gradient(135deg, rgba(19, 242, 135, 0.2) 0%, rgba(92, 160, 222, 0.1) 100%)"
      },
      "text": {
        "primary": "#FFFFFF",
        "secondary": "#B8BCC8",
        "tertiary": "#6B7280",
        "accent": "#13F287",
        "muted": "#4B5563"
      },
      "borders": {
        "default": "#2D2E36",
        "hover": "#3D3E46",
        "accent": "#13F287",
        "subtle": "#1F2028"
      },
      "states": {
        "success": "#13F287",
        "warning": "#F59E0B",
        "error": "#EF4444",
        "info": "#5CA0DE"
      }
    },
  
    "elementStyling": {
      "pageLayout": {
        "background": "#010212",
        "backgroundPattern": "subtle dot matrix overlay",
        "maxWidth": "1440px",
        "padding": "0 24px",
        "centerAligned": true
      },
  
      "heroSection": {
        "background": "radial-gradient(ellipse at center, rgba(19, 242, 135, 0.1) 0%, rgba(1, 2, 18, 1) 70%)",
        "textAlign": "center",
        "padding": "120px 0 80px 0"
      },
  
      "cards": {
        "default": {
          "background": "#1A1B23",
          "border": "1px solid #2D2E36",
          "borderRadius": "16px",
          "padding": "24px",
          "shadow": "0 4px 20px rgba(0, 0, 0, 0.3)",
          "backdropFilter": "blur(10px)"
        },
        "hover": {
          "background": "#21222A",
          "border": "1px solid #3D3E46",
          "transform": "translateY(-2px)",
          "shadow": "0 8px 32px rgba(0, 0, 0, 0.4)"
        },
        "accent": {
          "background": "#1A1B23",
          "border": "1px solid transparent",
          "borderImage": "linear-gradient(135deg, rgba(19, 242, 135, 0.2) 0%, rgba(92, 160, 222, 0.1) 100%) 1",
          "iconColor": "#13F287"
        },
        "statisticsCard": {
          "background": "#1A1B23",
          "numberColor": "#FFFFFF",
          "labelColor": "#B8BCC8",
          "accentElement": "#13F287"
        }
      },
  
      "buttons": {
        "primary": {
          "background": "#13F287",
          "color": "#000000",
          "border": "none",
          "borderRadius": "12px",
          "padding": "16px 32px",
          "fontSize": "16px",
          "fontWeight": "600",
          "shadow": "0 4px 16px rgba(19, 242, 135, 0.3)",
          "hover": {
            "background": "#0FD475",
            "transform": "translateY(-1px)",
            "shadow": "0 6px 20px rgba(19, 242, 135, 0.4)"
          },
          "pressed": {
            "background": "#0CB863",
            "transform": "translateY(0)"
          }
        },
        "secondary": {
          "background": "transparent",
          "color": "#FFFFFF",
          "border": "1px solid #2D2E36",
          "borderRadius": "12px",
          "padding": "16px 32px",
          "fontSize": "16px",
          "fontWeight": "500",
          "hover": {
            "background": "#1A1B23",
            "border": "1px solid #3D3E46"
          }
        },
        "ghost": {
          "background": "transparent",
          "color": "#B8BCC8",
          "border": "none",
          "borderRadius": "8px",
          "padding": "12px 20px",
          "hover": {
            "color": "#FFFFFF",
            "background": "rgba(255, 255, 255, 0.05)"
          }
        }
      },
  
      "navigation": {
        "background": "#1A1B23",
        "border": "1px solid #2D2E36",
        "borderRadius": "12px",
        "padding": "8px",
        "backdrop": "blur(20px)",
        "items": {
          "default": {
            "color": "#B8BCC8",
            "padding": "12px 20px",
            "borderRadius": "8px",
            "fontSize": "14px",
            "fontWeight": "500"
          },
          "active": {
            "color": "#000000",
            "background": "#13F287",
            "shadow": "0 2px 8px rgba(19, 242, 135, 0.3)"
          },
          "hover": {
            "color": "#FFFFFF",
            "background": "rgba(255, 255, 255, 0.05)"
          }
        }
      },
  
      "typography": {
        "h1": {
          "fontSize": "64px",
          "fontWeight": "700",
          "lineHeight": "1.1",
          "color": "#FFFFFF",
          "letterSpacing": "-0.02em"
        },
        "h2": {
          "fontSize": "48px",
          "fontWeight": "600",
          "lineHeight": "1.2",
          "color": "#FFFFFF",
          "letterSpacing": "-0.01em"
        },
        "h3": {
          "fontSize": "32px",
          "fontWeight": "600",
          "lineHeight": "1.3",
          "color": "#FFFFFF"
        },
        "accent": {
          "color": "#13F287",
          "fontWeight": "600"
        },
        "body": {
          "fontSize": "16px",
          "fontWeight": "400",
          "lineHeight": "1.6",
          "color": "#B8BCC8"
        },
        "caption": {
          "fontSize": "14px",
          "fontWeight": "500",
          "color": "#6B7280"
        },
        "numbers": {
          "fontSize": "32px",
          "fontWeight": "700",
          "color": "#FFFFFF",
          "fontFamily": "monospace"
        }
      },
  
      "icons": {
        "default": {
          "fill": "#B8BCC8",
          "size": "24px",
          "strokeWidth": "1.5px"
        },
        "accent": {
          "fill": "#13F287",
          "size": "24px",
          "strokeWidth": "2px"
        },
        "large": {
          "fill": "#13F287",
          "size": "32px",
          "strokeWidth": "2px"
        },
        "containers": {
          "background": "rgba(19, 242, 135, 0.1)",
          "borderRadius": "12px",
          "padding": "16px",
          "iconFill": "#13F287"
        }
      },
  
      "forms": {
        "inputs": {
          "background": "#1A1B23",
          "border": "1px solid #2D2E36",
          "borderRadius": "12px",
          "padding": "16px 20px",
          "color": "#FFFFFF",
          "placeholder": "#6B7280",
          "focus": {
            "border": "1px solid #13F287",
            "shadow": "0 0 0 3px rgba(19, 242, 135, 0.1)"
          }
        },
        "labels": {
          "color": "#B8BCC8",
          "fontSize": "14px",
          "fontWeight": "500",
          "marginBottom": "8px"
        }
      },
  
      "modals": {
        "overlay": "rgba(1, 2, 18, 0.8)",
        "background": "#0D0E16",
        "border": "1px solid #2D2E36",
        "borderRadius": "20px",
        "shadow": "0 20px 80px rgba(0, 0, 0, 0.6)",
        "backdrop": "blur(20px)"
      },
  
      "dataVisualization": {
        "chartColors": ["#13F287", "#5CA0DE", "#F59E0B", "#EF4444"],
        "gridLines": "#2D2E36",
        "labels": "#6B7280",
        "values": "#FFFFFF"
      }
    },
  
    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px",
      "4xl": "80px",
      "5xl": "120px"
    },
  
    "borderRadius": {
      "sm": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "20px",
      "full": "9999px"
    },
  
    "shadows": {
      "card": "0 4px 20px rgba(0, 0, 0, 0.3)",
      "cardHover": "0 8px 32px rgba(0, 0, 0, 0.4)",
      "button": "0 4px 16px rgba(19, 242, 135, 0.3)",
      "buttonHover": "0 6px 20px rgba(19, 242, 135, 0.4)",
      "modal": "0 20px 80px rgba(0, 0, 0, 0.6)"
    },
  
    "animations": {
      "hover": {
        "duration": "200ms",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
        "properties": ["transform", "box-shadow", "background-color", "border-color"]
      },
      "transition": {
        "duration": "150ms",
        "easing": "ease-in-out"
      }
    },
  
    "doNotRules": {
      "colorMisuse": [
        "DO NOT apply card gradients to icons - icons use solid #13F287",
        "DO NOT use button green (#13F287) for body text - use #B8BCC8",
        "DO NOT apply page background (#010212) to cards - use #1A1B23",
        "DO NOT use accent green for borders on default cards - use #2D2E36",
        "DO NOT apply text colors to button backgrounds",
        "DO NOT use navigation active styles on regular buttons"
      ],
      "stylingMisplacement": [
        "DO NOT apply card shadows to text elements",
        "DO NOT use modal overlays on page backgrounds",
        "DO NOT apply icon container styles to buttons",
        "DO NOT use statistics card styling on navigation items",
        "DO NOT apply blur effects to text content"
      ],
      "stateConfusion": [
        "DO NOT use hover states as default states",
        "DO NOT apply pressed states to non-interactive elements",
        "DO NOT use error colors for accent elements",
        "DO NOT mix primary and secondary button styles on same element"
      ]
    },
  
    "contextRules": {
      "cardStyling": "Cards use #1A1B23 background with #2D2E36 borders. Accent cards get gradient borders, NOT background gradients",
      "buttonHierarchy": "Primary buttons get green fill, secondary get transparent with border, ghost get no background",
      "iconUsage": "Icons in containers get background fills, standalone icons remain outline/fill only",
      "textHierarchy": "White for headings, #B8BCC8 for body, #6B7280 for captions, #13F287 only for accents",
      "shadowApplication": "Shadows on containers and buttons only, never on text or icons directly"
    }
  }